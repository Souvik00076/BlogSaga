<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.edit_profile"
    android:background="@drawable/back_app">
    

    <ImageView
        android:id="@+id/back_button"
        android:layout_width="@dimen/_32dp"
        android:layout_height="@dimen/_32dp"
        android:src="@drawable/baseline_arrow_back_24"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/_12dp"
        android:layout_marginTop="@dimen/_28dp"
        />

    <ImageView
        android:id="@+id/edit_profile"
        android:layout_width="@dimen/_112dp"
        android:layout_height="@dimen/_64dp"
        android:src="@drawable/edit_profile"
        android:layout_marginTop="@dimen/_12dp"
        android:layout_marginStart="@dimen/_52dp"
        android:layout_alignStart="@+id/back_button"
        />

    <ImageView
        android:id="@+id/edit_icon"
        android:layout_width="@dimen/_32dp"
        android:layout_height="@dimen/_32dp"
        android:src="@drawable/edit_button"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/_24dp"
        android:layout_marginTop="@dimen/_24dp"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/profile_pic"
        android:layout_width="@dimen/_198dp"
        android:layout_height="@dimen/_198dp"
        android:scaleType="centerCrop"
        app:shapeAppearanceOverlay="@style/circle"
        android:layout_marginTop="@dimen/_112dp"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/dp"
        />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/change_profile_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_pic"
        android:layout_alignEnd="@+id/profile_pic"
        android:layout_marginTop="-67dp"
        android:layout_marginEnd="-5dp"
        android:backgroundTint="@color/white"
        android:src="@drawable/baseline_camera_alt_24"
        app:maxImageSize="@dimen/_32dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_below="@+id/profile_pic"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/name_section"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/change_profile_button"
            android:layout_marginStart="-112dp"
            android:layout_marginTop="@dimen/_8dp"
            android:fontFamily="@font/oleoscript_bold"
            android:text="Name"
            android:textColor="@color/black"
            android:textSize="@dimen/_19sp"/>
        />
        <!--    java code for user name change-->
        <EditText
            android:id="@+id/name"
            style="@style/edit_text_style"
            android:layout_below="@+id/name_section"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_8dp" />


        <TextView
            android:id="@+id/email_section"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/change_profile_button"
            android:layout_marginStart="-112dp"
            android:layout_marginTop="@dimen/_8dp"
            android:fontFamily="@font/oleoscript_bold"
            android:text="Email"
            android:textColor="@color/black"
            android:textSize="@dimen/_19sp"/>
        />
        <!--    java code for user name change-->
        <EditText
            android:id="@+id/email"
            style="@style/edit_text_style"
            android:layout_below="@+id/name_section"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_8dp" />


        <TextView
            android:id="@+id/phone_section"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/change_profile_button"
            android:layout_marginStart="-112dp"
            android:layout_marginTop="@dimen/_8dp"
            android:fontFamily="@font/oleoscript_bold"
            android:text="Phone"
            android:textColor="@color/black"
            android:textSize="@dimen/_19sp"/>
        />
        <!--    java code for user name change-->
        <EditText
            android:id="@+id/phone"
            style="@style/edit_text_style"
            android:layout_below="@+id/name_section"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_8dp" />


        <TextView
            android:id="@+id/country_section"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/change_profile_button"
            android:layout_marginStart="-112dp"
            android:layout_marginTop="@dimen/_8dp"
            android:fontFamily="@font/oleoscript_bold"
            android:text="Country"
            android:textColor="@color/black"
            android:textSize="@dimen/_19sp"/>
        />
        <!--    java code for user name change-->
        <EditText
            android:id="@+id/country"
            style="@style/edit_text_style"
            android:layout_below="@+id/name_section"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_8dp"
            android:drawableRight="@drawable/baseline_keyboard_arrow_down_24"
            android:paddingRight="@dimen/_12dp"
            />


        <TextView
            android:id="@+id/DOB_section"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/change_profile_button"
            android:layout_marginStart="-92dp"
            android:layout_marginTop="@dimen/_8dp"
            android:fontFamily="@font/oleoscript_bold"
            android:text="Date of Birth"
            android:textColor="@color/black"
            android:textSize="@dimen/_19sp"/>
        />
        <!--    java code for user name change-->
        <EditText
            android:id="@+id/DOB"
            style="@style/edit_text_style"
            android:layout_below="@+id/name_section"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_8dp"
            android:drawableRight="@drawable/baseline_date_range_24"
            android:paddingRight="@dimen/_12dp"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/button_style"
            android:text="Log out"
            android:background="@drawable/design_widget_et"
            android:layout_marginBottom="@dimen/_12dp"
            />
    </LinearLayout>



</RelativeLayout>