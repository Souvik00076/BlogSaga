<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".fragments.gets_started">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/back_app"
        android:gravity="center"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/logo"
            style="@style/logo_style"
            android:layout_width="@dimen/_250dp"
            android:layout_gravity="center"
            android:layout_height="@dimen/_228dp"
            android:layout_marginBottom="@dimen/_24dp"
            android:src="@drawable/logo" />

        <TextView
            android:id="@+id/letsyouin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_40sp"
            android:layout_below="@+id/logo"
            android:fontFamily="@font/oleoscript_bold"
            android:textColor="@color/black"
            android:layout_marginBottom="@dimen/_16dp"
            android:text="Let's you in" />

        <Button
            android:id="@+id/google"
            style="@style/edit_text_style"
            android:layout_width="@dimen/_356dp"
            android:layout_height="wrap_content"
            android:gravity=""
            android:layout_below="@+id/letsyouin"
            android:drawableStart="@drawable/google"
            android:text="Continue With Google" />

        <Button
            android:id="@+id/github"
            android:layout_width="@dimen/_356dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/google"
            android:gravity=""
            android:drawableStart="@drawable/github"
            style="@style/edit_text_style"
            android:text="Continue With Github" />

        <TextView
            android:id="@+id/or"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/github"
            android:textSize="@dimen/_19sp"
            android:fontFamily="@font/oleoscript_regular"
            android:textColor="@color/black"
            android:layout_marginTop="24dp"
            android:text="OR" />

        <Button
            android:id="@+id/username"
            android:layout_width="@dimen/_356dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/or"
            android:layout_marginTop="@dimen/_24dp"
            style="@style/edit_text_style"
            android:gravity="center"
            android:text="Continue With Username" />

        <TextView
            android:id="@+id/dontaccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/username"
            android:layout_marginTop="@dimen/_24dp"
            android:textSize="@dimen/_19sp"
            android:fontFamily="@font/oleoscript_regular"
            android:textColor="@color/black"
            android:text="Don't Have an Account ?"/>

        <TextView
            android:id="@+id/signup_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:fontFamily="@font/oleoscript_regular"
            android:textColor="@color/black"
            android:textSize="@dimen/_19sp"/>


    </LinearLayout>

</FrameLayout>