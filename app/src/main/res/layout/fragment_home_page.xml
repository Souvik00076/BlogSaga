<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.home_page">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/login_signup_00"
        android:orientation="horizontal">


        <ImageView
            android:layout_width="@dimen/_228dp"
            android:layout_height="@dimen/_64dp"
            android:src="@drawable/blogsagalogo"
            android:id="@+id/blog_saga"
            android:layout_marginTop="@dimen/_24dp"
            android:layout_marginStart="@dimen/_8dp"/>

        <ImageView
            android:id="@+id/categories"
            android:layout_width="@dimen/_128dp"
            android:layout_height="@dimen/_40dp"
            android:layout_below="@+id/blog_saga"
            android:layout_marginTop="7dp"
            android:layout_marginStart="@dimen/_12dp"
            android:src="@drawable/categories"
            android:layout_alignParentStart="true"/>

        <ImageView
            android:layout_width="@dimen/_40dp"
            android:layout_height="@dimen/_40dp"
            android:id="@+id/bookmark"
            android:src="@drawable/baseline_bookmark_24"
            android:layout_marginEnd="@dimen/_32dp"
            android:layout_marginTop="@dimen/_40dp"
            android:layout_alignParentEnd="true"/>

        <ImageView
            android:layout_width="@dimen/_40dp"
            android:layout_height="@dimen/_40dp"
            android:id="@+id/notification"
            android:src="@drawable/baseline_notifications_24"
            android:layout_marginEnd="@dimen/_64dp"
            android:layout_marginTop="@dimen/_40dp"
            android:layout_alignEnd="@+id/bookmark"/>



        <HorizontalScrollView
            android:id="@+id/categories_scrollview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_1dp"
            android:layout_marginTop="@dimen/_140dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    style="@style/cardView_style">

                    <LinearLayout
                        style="@style/cardView_linear_layout_style"
                        android:background="@drawable/art">
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    style="@style/cardView_style">

                    <LinearLayout
                        style="@style/cardView_linear_layout_style"
                        android:background="@drawable/fashion">
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    style="@style/cardView_style">

                    <LinearLayout
                        style="@style/cardView_linear_layout_style"
                        android:background="@drawable/travel">
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    style="@style/cardView_style">

                    <LinearLayout
                        style="@style/cardView_linear_layout_style"
                        android:background="@drawable/fashion">
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    style="@style/cardView_style">

                    <LinearLayout
                        style="@style/cardView_linear_layout_style"
                        android:background="@drawable/food">
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    style="@style/cardView_style">

                    <LinearLayout
                        style="@style/cardView_linear_layout_style"
                        android:background="@drawable/fitness">
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    style="@style/cardView_style">

                    <LinearLayout
                        style="@style/cardView_linear_layout_style"
                        android:background="@drawable/tech">
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    style="@style/cardView_style">

                    <LinearLayout
                        style="@style/cardView_linear_layout_style"
                        android:background="@drawable/geo_politics">
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    style="@style/cardView_style">

                    <LinearLayout
                        style="@style/cardView_linear_layout_style"
                        android:background="@drawable/extra">
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </HorizontalScrollView>
        <ImageView
            android:id="@+id/recent"
            android:layout_width="@dimen/_128dp"
            android:layout_height="@dimen/_40dp"
            android:layout_below="@+id/categories_scrollview"
            android:layout_marginTop="@dimen/_12dp"
            android:layout_marginStart="@dimen/_12dp"
            android:src="@drawable/recents"
            android:layout_alignParentStart="true"/>
        <androidx.cardview.widget.CardView
            android:id="@+id/Rcv"
            style="@style/cardView_recent_style"
            android:layout_below="@id/recent"
            android:background="@color/trans"
            >
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/article_image"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_96dp"
                    app:shapeAppearanceOverlay="@style/shape"
                    app:srcCompat="@drawable/recentpic"
                    android:scaleType="centerCrop"
                    />
                <ImageView
                    android:id="@+id/bookmark_recent"
                    android:layout_marginStart="@dimen/_128dp"
                    android:layout_marginTop="@dimen/_8dp"
                    android:baselineAlignBottom="true"
                    android:layout_width="@dimen/_24dp"
                    android:layout_height="@dimen/_24dp"
                    android:src="@drawable/baseline_bookmark_border_24" />
                <TextView
                    android:id="@+id/article_title"
                    android:layout_below="@+id/article_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5 tips for stay fit and healthy"
                    android:layout_marginStart="@dimen/_8dp"
                    android:fontFamily="@font/oleoscript_regular"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_16sp"
                    />
                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/client_AC_image"
                    android:layout_width="@dimen/_24dp"
                    android:layout_height="@dimen/_24dp"
                    android:background="@drawable/recentpic"
                    android:layout_below="@+id/article_title"
                    android:layout_marginStart="@dimen/_8dp"
                    android:scaleType="centerCrop"
                    app:shapeAppearanceOverlay="@style/circle"
                    app:strokeWidth="@dimen/_2dp" />

                <TextView
                    android:id="@+id/client_AC_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/client_AC_image"
                    android:layout_marginStart="@dimen/_8dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="-23dp"
                    android:layout_toRightOf="@+id/client_AC_image"
                    android:fontFamily="@font/oleoscript_regular"
                    android:text="Nasty fitness"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_11sp" />

                <TextView
                    android:id="@+id/times"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/client_AC_image"
                    android:layout_marginStart="@dimen/_8dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="-21dp"
                    android:layout_toRightOf="@+id/client_AC_id"
                    android:fontFamily="@font/oleoscript_regular"
                    android:text="8 days ago"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_9sp" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>


    </RelativeLayout>

</RelativeLayout>