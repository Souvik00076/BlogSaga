<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_app"
    tools:context=".fragments.MyBookmark">

    <ImageView
        android:id="@+id/back_button"
        android:layout_width="@dimen/_32dp"
        android:layout_height="@dimen/_32dp"
        android:src="@drawable/baseline_arrow_back_24"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/_12dp"
        android:layout_marginTop="@dimen/_28dp"
        />

    <TextView
        android:id="@+id/myBookmark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/My_bookmark"
        android:fontFamily="@font/oleoscript_bold"
        android:textSize="@dimen/_30sp"
        android:textColor="@color/black"
        android:layout_toEndOf="@+id/back_button"
        android:layout_marginTop="@dimen/_24dp"
        android:layout_marginStart="@dimen/_12dp"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/bookmark_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/myBookmark"
        android:layout_marginTop="@dimen/_12dp"
        />



</RelativeLayout>