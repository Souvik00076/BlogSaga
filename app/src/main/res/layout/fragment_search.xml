<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/search_back"
    tools:context=".fragments.Search">

    <ImageView
        android:id="@+id/back_button"
        android:layout_width="@dimen/_48dp"
        android:layout_height="@dimen/_32dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/_12dp"
        android:layout_marginTop="@dimen/_28dp"
        android:src="@drawable/baseline_arrow_back_24" />

    <RelativeLayout
        android:id="@+id/search"
        android:layout_width="@dimen/_356dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/back_button"
        android:layout_centerHorizontal="true"
        android:background="@drawable/design_search_widgets">

        <SearchView
            android:id="@+id/searchview"
            android:layout_width="@dimen/_356dp"
            android:layout_height="@dimen/_48dp"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="@dimen/_4dp"
            android:searchIcon="@drawable/search"></SearchView>

        <ImageView
            android:id="@+id/mic_icon"
            android:layout_width="@dimen/_30dp"
            android:layout_height="@dimen/_30dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/_16dp"
            android:src="@drawable/baseline_mic_24" />
    </RelativeLayout>


    <TextView
        android:id="@+id/mostrecent"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_32dp"
        android:layout_below="@+id/search"
        android:layout_marginStart="@dimen/_24dp"
        android:layout_marginTop="@dimen/_12dp"
        android:fontFamily="@font/oleoscript_bold"
        android:text="Most Populer"
        android:textColor="@color/black"
        android:textSize="@dimen/_24sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mostrecent" >


    </androidx.recyclerview.widget.RecyclerView>


</RelativeLayout>