<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_signup_00"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".fragments.SignupFragment">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/profile_pic"
        android:layout_width="@dimen/_164dp"
        android:layout_height="@dimen/_164dp"
        android:layout_marginBottom="@dimen/_52dp"
        android:background="@drawable/singpic"
        android:padding="@dimen/_8dp"
        android:scaleType="centerCrop"
        app:shapeAppearanceOverlay="@style/circle"
        app:strokeWidth="@dimen/_2dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/change_profile_button"
        android:layout_width="@dimen/_44dp"
        android:layout_height="@dimen/_44dp"
        android:background="@drawable/custom_fab_shape"
        android:layout_marginTop="-106dp"
        android:layout_marginEnd="-47dp"
        />

    <EditText
        android:id="@+id/txt_email"
        style="@style/edit_text_style"
        android:drawableStart="@drawable/baseline_person_24"
        android:hint="@string/email_hint" />

    <EditText
        android:id="@+id/txt_password"
        style="@style/edit_text_style"
        android:drawableStart="@drawable/baseline_key_24"
        android:hint="@string/password_hint" />

    <EditText
        android:id="@+id/txt_confirm_password"
        style="@style/edit_text_style"
        android:hint="@string/confPassword_hint"
        android:paddingStart="@dimen/_52dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_sign_up"
        style="@style/button_style"
        android:background="@drawable/design_widget_et"
        android:text="@string/btnSignUp"
        android:textAllCaps="false" />


</LinearLayout>