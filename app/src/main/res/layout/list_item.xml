<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_marginTop="@dimen/_12dp"
        android:id="@+id/notification_rcv"
        style="@style/cardView_notification_style"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/light_peach"
            >
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/client_AC_image"
                android:layout_width="@dimen/_30dp"
                android:layout_height="@dimen/_30dp"
                android:layout_marginStart="@dimen/_12dp"
                android:background="@drawable/recentpic"
                android:scaleType="centerCrop"
                app:shapeAppearanceOverlay="@style/circle"
                android:layout_centerVertical="true"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/UserName"
                android:layout_toRightOf="@+id/client_AC_image"
                android:layout_centerVertical="true"
                android:gravity="center_horizontal"
                android:layout_marginStart="@dimen/_8dp"
                android:text="User@name: "
                android:fontFamily="@font/oleoscript_bold"
                android:textColor="@color/black"
                />

            <TextView
                android:id="@+id/messege"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/UserName"
                android:ellipsize="end"
                android:layout_centerVertical="true"
                android:text=" started following you"
                android:fontFamily="@font/oleoscript_regular"
                android:gravity="center_horizontal"
                android:maxLines="1"
                android:textColor="@color/black" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>