<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="edit_text_style">
        <item name="android:layout_width">@dimen/_328dp</item>
        <item name="android:layout_height">@dimen/_48dp</item>
        <item name="android:layout_marginTop">@dimen/_24dp</item>
        <item name="android:background">@drawable/design_widget_et</item>
        <item name="fontFamily">@font/oleoscript_bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_17sp</item>
        <item name="android:paddingStart">@dimen/_16dp</item>
        <item name="android:drawablePadding">@dimen/_16dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:maxLength">30</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingEnd">@dimen/_16dp</item>
        <item name="hintTextColor">@color/black</item>
    </style>

    <style name="button_style">
        <item name="android:layout_width">@dimen/_112dp</item>
        <item name="android:layout_height">@dimen/_40dp</item>
        <item name="android:textColor">@color/brown</item>
        <item name="android:background">@drawable/design_widget_et</item>
        <item name="android:fontFamily">@font/oleoscript_regular</item>
        <item name="android:layout_marginTop">@dimen/_48dp</item>
        <item name="android:textSize">@dimen/_19sp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="logo_style">
        <item name="android:radius">@dimen/_250dp</item>
    </style>


    //circle image
    <style name="circle" parent="ShapeAppearanceOverlay">
        <item name="cornerSize">50%</item>
    </style>
<!--radius in card view-->
    <style name="shape" parent="">
        <item name="cornerSize">20%</item>
    </style>

    <style name="cardView_style"> <!-- This is for home page -->
        <item name="cardCornerRadius">@dimen/_24dp</item>
        <item name="cardElevation">@dimen/_8dp</item>
        <item name="android:layout_width">@dimen/_218dp</item>
        <item name="android:layout_height">@dimen/_89dp</item>
        <item name="android:layout_margin">@dimen/_16dp</item>
    </style>

    <style name="cardView_recent_style"> <!-- This is for home page -->
        <item name="cardCornerRadius">@dimen/_24dp</item>
        <item name="cardElevation">@dimen/_8dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_128dp</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="cardView_notification_style"> <!-- This is for home page -->
        <item name="cardCornerRadius">@dimen/_24dp</item>
        <item name="cardElevation">@dimen/_8dp</item>
        <item name="android:layout_width">@dimen/_356dp</item>
        <item name="android:layout_height">@dimen/_40dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="circle_img" parent="">
        <item name="cornerSize">20%</item>
        <item name="android:layout_width">@dimen/_170dp</item>
        <item name="android:layout_height">@dimen/_170dp</item>
        <item name="android:layout_margin">@dimen/_16dp</item>
    </style>


    
    <style name="cardView_linear_layout_style"> <!-- In home page into cardView -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="button_style_crate_page">
        <item name="android:layout_width">@dimen/_78dp</item>
        <item name="android:layout_height">@dimen/_28dp</item>
        <item name="color">@color/peach</item>
        <item name="android:textColor">@color/brown</item>
        <item name="cornerRadius">@dimen/_24dp</item>
        <item name="fontFamily">@font/oleoscript_regular</item>
        <item name="android:textSize">@dimen/_16sp</item>
        <item name="android:layout_marginTop">@dimen/_32dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="article_title_et">
        <item name="android:layout_width">@dimen/_356dp</item>
        <item name="android:layout_height">@dimen/_48dp</item>
        <item name="android:layout_marginTop">@dimen/_8dp</item>

        <item name="android:background">@drawable/widgets_create_img</item>
        <item name="fontFamily">@font/oleoscript_bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_17sp</item>
        <item name="android:paddingStart">@dimen/_16dp</item>
        <item name="android:paddingEnd">@dimen/_16dp</item>
    </style>

    <style name="img_sv_btn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="backgroundTint">@color/remove_back</item>
    </style>

    <style name="design_edit_button"> <!-- In home page into cardView -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginStart">@dimen/_5dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="TabTextStyle" parent="TextAppearance.Design.Tab">
        <item name="fontFamily">@font/oleoscript_regular</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">27sp</item>2
    </style>



</resources>